{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "style.css",
      "use": "@vercel/static"
    },
    {
      "src": "scripts/(.*)",
      "use": "@vercel/static"
    },
    {
      "src": "assets/(.*)",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/scripts/(.*)\\.js",
      "dest": "/scripts/$1.js",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/style\\.css",
      "dest": "/style.css",
      "headers": {
        "Content-Type": "text/css; charset=utf-8",
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/assets/(.*)\\.(png|jpg|jpeg|svg|ico|webp|pdf|json|woff2?)",
      "dest": "/assets/$1.$2",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ]
}
